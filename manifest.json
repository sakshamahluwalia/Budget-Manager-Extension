{
	"manifest_version": 2,
	"name": "Budget Manager",
	"version": "1.0",

	"page_action": {
		"default_popup": "popup.html"
	},

	"background": { // runs in the background all the time
		"scripts": ["eventPage.js"],
		"persistent": false
	},

	"content_scripts": 
	[
		{
			"matches": ["https://www.cibc.com/*"],
			"js": ["content.js", "jquery-3.3.1.min.js"]
		}
	], 

	"permissions": 
	[
		"tabs", 
		"https://www.cibconline.cibc.com/*"
	]

}